{
   "compilerOptions": {
      "lib": [
         "es5",
         "es6"
      ],
      "baseUrl": "./src",
      "rootDir": "./src",
      "paths": {
         "@/*": [
            "./*"
         ]
      },
      "target": "es5",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./build",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "esModuleInterop": true,
      "sourceMap": true,
      "allowSyntheticDefaultImports": true
   }
}
